<% layout("/layouts/boilerplate") %>

<style>
  body {
    background-color: #e5eaf5;
  }
  .form-title {
  font-size: 2.2rem;
  font-weight: 700;
  text-align: center;
  margin-bottom: 40px;
  color: #2c3e50;
  letter-spacing: 1px;
  position: relative;
}

.form-title::after {
  content: "";
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 4px;
  border-radius: 2px;
  background-color: #2ecc71;
}

#create {
  animation: colorChange 4s infinite alternate;
  display: inline-block;
}


  .form-container {
    max-width: 700px;
    margin: 50px auto;
    background-color: #ffffff;
    padding: 40px 30px;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .form-title {
    font-size: 2rem;
    font-weight: bold;
    text-align: center;
    margin-bottom: 30px;
    color: #343a40;
  }

  .form-label {
    font-weight: 600;
    margin-bottom: 5px;
  }

  .form-control {
    border-radius: 8px;
  }

  .btn-submit {
    width: 100%;
    padding: 12px;
    font-size: 1.1rem;
    border-radius: 10px;
  }

  #create {
    animation: colorChange 4s infinite alternate;
  }

  @keyframes colorChange {
    0% { color: #e74c3c; }
    25% { color: #f39c12; }
    50% { color: #3498db; }
    75% { color: #9b59b6; }
    100% { color: #2ecc71; }
  }
</style>

<div class="form-container">
  <h3 class="form-title">
  <i class="fa-solid fa-plus-circle me-2" style="color: #2ecc71;"></i>
  <span id="create">Create New Listing</span>
</h3>


  <form method="POST" action="/listings" enctype="multipart/form-data" class="needs-validation" novalidate>
    <!-- Title -->
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" type="text" placeholder="Add a catchy title" class="form-control" required>
      <div class="valid-feedback">Title looks good</div>
      <div class="invalid-feedback">Please enter a valid title</div>
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]" rows="3" placeholder="Write a short description..." class="form-control" required></textarea>
      <div class="invalid-feedback">Please enter a short description</div>
    </div>

    <!-- Image -->
    <div class="mb-3">
      <label for="image" class="form-label">Upload Listing Image</label>
      <input name="listing[image]" type="file" class="form-control" required>
      <div class="invalid-feedback">Please upload an image</div>
    </div>

    <div class="row">
      <!-- Price -->
      <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" type="number" placeholder="1200" class="form-control" required>
        <div class="invalid-feedback">Please enter a valid price</div>
      </div>

      <!-- Country -->
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" type="text" placeholder="India" class="form-control" required>
        <div class="invalid-feedback">Please enter a valid country name</div>
      </div>
    </div>

    <!-- Location -->
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input name="listing[location]" type="text" placeholder="Bihar, UP" class="form-control" required>
      <div class="invalid-feedback">Please enter a valid location</div>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-dark btn-submit mt-3">Add Listing</button>
  </form>
</div>

<script src="/js/script.js"></script>
