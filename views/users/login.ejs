<% layout("/layouts/boilerplate")  %>

<style>
/* Do not apply to entire body */
.login-page {
  background: #f5f5f5;
  font-family: 'Segoe UI', Tahoma, sans-serif;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-container {
  max-width: 450px;
  background: #fff;
  padding: 50px 40px;
  border-radius: 15px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
}

.login-container h1 {
  text-align: center;
  margin-bottom: 40px;
  color: #ff385c;
  font-weight: 700;
  font-size: 32px;
}

.login-container .form-label {
  font-weight: 600;
  margin-bottom: 8px;
  display: block;
  color: #333;
}

.login-container .form-control {
  width: 100%;
  padding: 12px 15px;
  border: 1px solid #ccc;
  border-radius: 10px;
  font-size: 16px;
  transition: border-color 0.3s, box-shadow 0.3s;
  margin-bottom: 20px;
}

.login-container .form-control:focus {
  border-color: #ff385c;
  box-shadow: 0 0 10px rgba(255, 56, 92, 0.3);
  outline: none;
}

.login-container button {
  width: 100%;
  padding: 14px;
  background-color: #ff385c;
  border: none;
  color: #fff;
  border-radius: 10px;
  font-size: 18px;
  font-weight: bold;
  transition: background-color 0.3s;
}

.login-container button:hover {
  background-color: #e63250;
  cursor: pointer;
}
</style>

<div class="login-page">
  <div class="login-container">
    <h1>Login</h1>
    <form action="/login" method="POST" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" type="text" class="form-control" placeholder="Enter your username" required>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" type="password" class="form-control" placeholder="Enter your password" required>
      </div>

      <button type="submit">Login</button>
    </form>
  </div>
</div>
